{
  "name": "pof-time-tracker",
  "version": "1.0.0",
  "description": "POFTimeTracker",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . pof-time-tracker-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"POFTimeTracker App\"",
    "package-linux": "electron-packager . pof-time-tracker-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "windows-setup": "node installers/windows/createinstaller.js",
    "linux-setup": "electron-installer-debian --src release-builds/pof-time-tracker-app-linux-x64/ --arch amd64 --config debian.json",
    "mac-setup": "electron-installer-dmg ./release-builds/pof-time-tracker-darwin-x64/pof-time-tracker.app pof-time-tracker-app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kriskristoffersonnabua/POFTimeTrackerElectron.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kriskristoffersonnabua/POFTimeTrackerElectron/issues"
  },
  "homepage": "https://github.com/kriskristoffersonnabua/POFTimeTrackerElectron#readme",
  "dependencies": {
    "gentelella": "^1.4.0",
    "heredoc": "^1.3.1",
    "jquery": "^3.5.0"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "electron": "^8.2.3",
    "electron-installer-debian": "^3.0.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^14.2.1",
    "electron-store": "^5.1.1",
    "electron-winstaller": "^4.0.0",
    "screenshot-desktop": "^1.12.0",
    "standard": "^14.3.3"
  }
}
